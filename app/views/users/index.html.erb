<h1>This is the lists of all users in the application</h1>
<% @users.each do |user|%>
    <div class='user'>
      <div class='img_container'>
        <img src="<%= user.photo %>" alt="<%= user.name %>" class='user_image'>
      </div>
      <div class='user_details'>
        <%= link_to user_path(user.id) do %>
        <h2>
          <%= user.name %>
        </h2>
       <%end%>
        <h4>
          <%= user.posts_counter%>
        </h4>
      </div>
    </div>
<% end %>