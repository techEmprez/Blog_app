<div>
    <h2> Create Comment </h2>
    <%= form_with model: @comment, url: user_post_comments_path, data: { turbo: false} do |form| %>
        
        <div class="mb-3">
            <%= form.label :text, class: "form-label" %>
            <%= form.text_field :text, class: "form-control", id: "exampleFormControlInput1", placeholder: "Post Title" %>
        </div>
        <%= form.submit "Post Comments", class:"btn btn-primary" %>
    <% end %>
</div>
