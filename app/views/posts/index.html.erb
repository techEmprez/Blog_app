<h1>This is the User post page</h1>

<div>
   <div>
     <img src=<%= @user.photo %> alt="profile picture of <%= @user.name %>" />
   </div>
    <div>
      <h2><%= @user.name %></h2>
      <p>Number of Posts: <%= @user.posts_counter %></p>
    </div>
</div>

<hr/>

<% @posts.each_with_index do |post, index| %>
<p>Post #<%= index+1 %></p>
<div> <%= render 'post', post: post %></div>
<% end %>