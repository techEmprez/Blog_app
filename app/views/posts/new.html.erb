<section>
  <h1>Create new post</h1>

<% if @post.errors.any? %>
<ul>
 <% @post.errors.full_messages.each do |msg|%>
 <li>
  <%= msg %>
  </li>
 <% end %>
 </ul>
<% end %>

  <%= form_with model: @post, url: user_posts_path, method: :post, class: 'form' do |f|%>
    <div>
      <%= f.label :title, 'Enter post title' %><br>
      <%= f.text_field :title %>
    </div>
    <div>
      <%= f.label :text, 'Enter post content' %><br>
      <%= f.text_area :text %>
    </div>
    <div>
      <%= f.submit %>
    </div>
  <% end %>
</section>

