<div class="container">
  <% if flash[:success] %>
  <div class="alert alert-success"><%= flash[:success] %></div>
  <% end %>
  <div class="card mb-3">
    <div class="card-title d-flex justify-content-between p-2">
      <h6 class="">
        <b>Post Title: </b><%= @post.title %>
      </h6>
      <div class="d-flex justify-content-between p-2">
        <p class="mx-4" style="position: relative">
          Comments:
          <span
            style="
              position: absolute;
              width: 20px;
              height: 20px;
              border-radius: 50%;
              background: blue;
              color: white;
              font-size: 12px;
              text-align: center;
            "
            class=""
            ><%= @post.comments_counter %></span
          >
        </p>
        <p class="mx-4" style="position: relative">
          Likes:
          <span
            style="
              position: absolute;
              width: 20px;
              height: 20px;
              border-radius: 50%;
              background: green;
              color: white;
              font-size: 12px;
              text-align: center;
            "
            class=""
            ><%= @post.likes_counter %></span
          >
        </p>
      </div>
    </div>
    <div class="card-body">
      <p class="card-text">Post Content: <%= @post.text %></p>
      <div class="d-flex justify-content-between align-items-center">
        <div class="link">
        <% if can? :destroy, @post %>
          <%= link_to 'Delete', user_post_path(@post.id),data: {turbo_method: :delete, turbo_confirm: 'Are you sure you want to delete post?'},
          class: 'btn-sm btn btn-danger' %>
        <% end %>
        <%= link_to 'Back', user_posts_path,
          class: 'btn-sm btn btn-default' %>
        </div>
  <div >
  <%= form_with url: user_post_likes_path(@post.author, @post), method: :post do |f| %>
    <%= f.submit 'Like post', class: 'btn-sm btn btn-success' %>
  <% end %>
      </div>
      <%= link_to 'Add Comment', new_user_post_comment_url(@post.author, @post),class: 'btn-sm btn btn-outline-success mt-3 text-primary' %>
    </div>
    <section class="py-1 container">
      <h6>Comments:</h6>
      <div class="post">
        <% if @post.comments.length == 0 %>
        <p class="mt-3">No comments Available!</p>
        <% else %>
         <% @post.comments.includes([:author]).each do |comment| %>
           <div class="comments d-flex justify-content-between  shadow-none p-2 mb-1 bg-light rounded">
            <p class="mt-3"><%= comment.author.name %>: <%= comment.text %></p>
            <% if can? :destroy, comment %>
           <%= link_to 'Delete', user_post_comment_path(comment.author, comment.post, comment),data: {turbo_method: :delete, turbo_confirm: 'Are you sure you want to delete comment?'},
            class: 'text-danger' %>
            <% end %>
           </div>
         <% end %>
        <% end %>
      </div>
    </section>
  </div>
</div>
