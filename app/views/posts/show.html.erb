<h1>This is the Post Page</h1>

<div class="posts">
  <div>
    <h1><%= @user.name%> </h1>
    <p> <%= @post.title%> </p>
    <p> <%= @post.text%> </p>
    <p > Comments: <%= @post.comments_counter %>, Likes: <%= @post.likes_counter %> </p>
  </div>

  <section class="py-1 container">
      <h6>Comments:</h6>
      <div class="post">
        <% if @post.comments.length == 0 %>
        <p class="mt-3">No comments Available!</p>
        <% else %> <% @post.comments.includes([:author]).each do |comment| %>
        <p class="mt-3"><%= comment.author.name %>: <%= comment.text %></p>
        <% end %> <% end %>
      </div>
    </section>

  <div >
    <%= form_with url: "/users/#{@post.author_id}/posts/#{@post.id}/likes" do |f| %>
  <%= f.submit "Like" %>
  <% end %>
  </div>
</div>

<%= link_to 'Add comment', new_user_post_comment_path(@user, @post) %>
